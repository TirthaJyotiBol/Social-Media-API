<link rel="stylesheet" href="/css/register.css">

<body>
    <h3 id="form-heading">Login Form</h3>


    <form id="form-login" method="post" action="signin">

        <%
        if(userNotFound){
            %>
                <p id="user-not-found"> <%= userNotFound %> </p>
            <%
            }
         %>

        <div class="mb-3">
          <label for="email" class="form-label">Email address</label>
          <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="email" placeholder="Enter your Email">
        </div>

           <%
                if(errors){
                    let check = errors.find((curr)=>{
                    return curr.path==='email';
                    })
                    if(check){
                %>
                    <p class="error-message"> <%= check.msg %> </p>
                <%
                    }
                }
           %>

        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="text" class="form-control" id="password" name="password" placeholder="Enter Your Password">
          <%
                if(errors){
                    let check = errors.find((curr)=>{
                    return curr.path==='password';
                    })
                    if(check){
                %>
                    <p class="error-message"> <%= check.msg %> </p>
                <%
                    }
                }
           %>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
      </form>
</body>